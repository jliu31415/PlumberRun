<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <jliu.plumberrun.Game
            android:id="@+id/game_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:contentDescription="@string/pause"
            app:srcCompat="@drawable/pause_button" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/pause_button"
            android:layout_toLeftOf="@+id/pause_button"
            android:background="@null"
            android:contentDescription="@string/pause"
            app:srcCompat="@drawable/settings_button" />

    <RelativeLayout
        android:id="@+id/level_complete"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/level_pop_up"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/level_complete"
            app:srcCompat="@drawable/level_complete" />

        <ImageButton
            android:id="@+id/replay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/level_pop_up"
            android:layout_alignLeft="@+id/level_pop_up"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="40dp"
            android:background="@null"
            android:contentDescription="@string/replay"
            app:srcCompat="@drawable/replay_button" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/level_pop_up"
            android:layout_alignRight="@+id/level_pop_up"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="40dp"
            android:background="@null"
            android:contentDescription="@string/home"
            app:srcCompat="@drawable/menu_button" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pause_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/pause_pop_up"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/pause"
                app:srcCompat="@drawable/pause_screen" />

            <ImageButton
                android:id="@+id/pause_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pause_pop_up"
                android:layout_alignLeft="@+id/pause_pop_up"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="40dp"
                android:background="@null"
                android:contentDescription="@string/home"
                app:srcCompat="@drawable/menu_button" />

            <ImageButton
                android:id="@+id/resume_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/pause_pop_up"
                android:layout_alignRight="@+id/pause_pop_up"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="40dp"
                android:background="@null"
                android:contentDescription="@string/resume"
                app:srcCompat="@drawable/play_button" />

        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/game_load_screen"
        layout="@layout/loading_transition" />

</androidx.constraintlayout.widget.ConstraintLayout>