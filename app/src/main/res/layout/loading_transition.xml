<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/plunger1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="0"
            app:srcCompat="@drawable/load_icon" />

        <ImageView
            android:id="@+id/plunger2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="60"
            app:srcCompat="@drawable/load_icon" />

        <ImageView
            android:id="@+id/plunger3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="120"
            app:srcCompat="@drawable/load_icon" />

        <ImageView
            android:id="@+id/plunger4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="180"
            app:srcCompat="@drawable/load_icon" />

        <ImageView
            android:id="@+id/plunger5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="240"
            app:srcCompat="@drawable/load_icon" />

        <ImageView
            android:id="@+id/plunger6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/plunger"
            android:rotation="300"
            app:srcCompat="@drawable/load_icon" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>